<div class="hss-login-wrapper">
  <div class="card hss-login">
    <div class="card-header">
      <div class="card-title h5">Welcome</div>
    </div>
    <div class="card-body">
      <div class="form-group">
        <div class="col-12">
          <label class="form-label" for="server_addr">Server Address</label>
        </div>
        <div class="col-12">
          <input class="form-input" type="text" id="server_addr" placeholder="Server IP" pattern="^(localhost|(([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5])\.){3}([0-9]|[1-9][0-9]|1[0-9]{2}|2[0-4][0-9]|25[0-5]))(:([0-9]|[1-9][0-9]|[1-9][0-9]{2}|[1-9][0-9]{3}|[1-5][0-9]{4}|6([0-4][0-9]{3}|5([0-4][0-9]{2}|5([0-2][0-9]|3[0-5])))))?$">
        </div>
      </div>
      <div class="form-group">
        <div class="col-12">
          <label class="form-label" for="username">Username</label>
        </div>
        <div class="col-12">
          <input class="form-input" type="text" id="username" placeholder="Username" pattern="[a-zA-Z0-9]+">
        </div>
      </div>
      <div class="form-group">
        <div class="col-12">
          <label class="form-label" for="password">Password</label>
        </div>
        <div class="col-12">
          <input class="form-input" type="password" id="password" placeholder="Password" pattern="[^' ']+">
        </div>
      </div>
      <div class="form-group">
        <label class="form-checkbox">
          <input type="checkbox" id="perm">
          <i class="form-icon"></i> Remember me
        </label>
      </div>
    </div>
    <div class="card-footer">
      <button onclick="runtime.user.functions.tryAuthFromForm()" class="btn btn-primary input-group-btn btn-lg col-12">Submit</button>
    </div>
  </div>
</div>